{
  "authentication": {
    "enabled": true,
    "type": "jwt",
    "secret_key_env": "JWT_SECRET_KEY"
  },
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 100,
    "burst_size": 20
  },
  "input_validation": {
    "max_payload_size": "10MB",
    "sanitize_inputs": true,
    "validate_schemas": true
  },
  "logging": {
    "security_events": true,
    "audit_trail": true,
    "pii_protection": true
  }
}