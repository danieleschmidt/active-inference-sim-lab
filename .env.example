# Active Inference Simulation Lab Environment Variables

# Development Environment
DEBUG=true
LOG_LEVEL=info
PYTHONPATH=./src

# Training Configuration
WANDB_API_KEY=your_wandb_api_key_here
TENSORBOARD_LOG_DIR=./logs
MODEL_CHECKPOINT_DIR=./checkpoints
DATA_DIR=./data

# Performance Settings
OMP_NUM_THREADS=4
OPENBLAS_NUM_THREADS=4
MKL_NUM_THREADS=4
CUDA_VISIBLE_DEVICES=0

# Environment Integration
GYM_ENV_PATH=./envs
MUJOCO_KEY_PATH=./mujoco_key.txt
MUJOCO_GL=egl

# Testing Configuration
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=80
BENCHMARK_TIMEOUT=3600

# CI/CD Configuration
GITHUB_TOKEN=your_github_token_here
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=active-inference-lab

# Security
ALLOW_EXTERNAL_MODELS=false
MODEL_SIGNATURE_VERIFICATION=true
MAX_MODEL_SIZE_MB=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
HEALTH_CHECK_PORT=8080

# Development Tools
PRE_COMMIT_ENABLED=true
AUTO_FORMAT_ENABLED=true
TYPE_CHECK_ENABLED=true