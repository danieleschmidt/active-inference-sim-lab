{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_cpp",
      "type": "shell",
      "command": "mkdir -p build && cd build && cmake .. && make -j$(nproc)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "test_cpp",
      "type": "shell",
      "command": "cd build && ctest --output-on-failure",
      "group": "test",
      "dependsOn": "build_cpp",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test_python",
      "type": "shell",
      "command": "pytest tests/python/ -v",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "format_code",
      "type": "shell",
      "command": "black src tests examples && isort src tests examples && clang-format -i src/**/*.cpp include/**/*.h",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "lint_code",
      "type": "shell",
      "command": "flake8 src tests && pylint src && clang-format --dry-run --Werror src/**/*.cpp include/**/*.h",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "install_dev",
      "type": "shell",
      "command": "pip install -e .[dev]",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf build/ dist/ *.egg-info/ __pycache__/ .pytest_cache/ .coverage htmlcov/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}